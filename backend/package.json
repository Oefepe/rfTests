{
  "name": "backend-ts",
  "version": "11.0.0",
  "description": "Express API using Typescript",
  "main": "src/server.ts",
  "scripts": {
    "build": "rm -rf build/ && tsc -p . ",
    "local-start": "export NODE_ENV=local && nodemon  --ignore ./public/ ./src/driver/server.ts",
    "cron-start": "NODE_PATH=./build node build/driver/cronServer.js",
    "start": "NODE_PATH=./build node build/driver/server.js",
    "test:unit": "dotenv -e .env.local -e env.test -- npx mocha --require ts-node/register ./src/**/*.test.ts --recursive",
    "test:unit:coverage": "dotenv -e .env.local -e env.test -- npx nyc --reporter=lcov npx mocha --require ts-node/register ./src/**/*.test.ts --recursive",
    "lint": "eslint .",
    "prepare": "cd .. && husky backend/.husky"
  },
  "_comment": "--check-leaks Not leaking any global variable tsconfig-paths/register to use import and export",
  "author": "Rapidfunnel",
  "license": "ISC",
